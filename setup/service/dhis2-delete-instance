#!/usr/bin/env bash

# TODO: tidy up and generalize this

NAME=$1
PG=$2

lxc exec proxy -- rm /etc/apache2/upstream/${NAME}
lxc exec proxy -- rm /etc/nginx/upstream/${NAME}
lxc stop $NAME
lxc delete $NAME

lxc exec ${PG} -- dropdb $NAME
lxc exec ${PG} -- dropuser $NAME

sudo sed -i "/.* $N$/d" /etc/hosts
